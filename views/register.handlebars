{{#section 'head'}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="/js/validation.js"></script>

{{/section}}

<h2 class="page-header">Register</h2>
{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}
<form id="register-form" method="post" action="/users/register">
   <div class="form-group">
    <label>Name</label>
    <input id="name" type="text" class="form-control invalid-textbox" placeholder="Name" name="name">
  </div>
  <div class="form-group">
    <label>Username</label>
    <input id="uname" type="text" class="form-control invalid-textbox" placeholder="Username" name="username">
  </div>
   <div class="form-group">
    <label>Email</label>
    <input id="email" type="email" class="form-control invalid-textbox" placeholder="Email" name="email">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input id="password" type="password" class="form-control invalid-textbox" placeholder="Password" name="password">
  </div>
  <div class="form-group">
    <label>Confirm Password</label>
    <input id="password2" type="password" class="form-control invalid-textbox" placeholder="Password" name="password2">
  </div>
  <button id="btn_register" type="submit" disabled class="btn btn-default">Submit</button>
</form>